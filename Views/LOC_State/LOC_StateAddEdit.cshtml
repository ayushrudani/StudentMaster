@using System.Data;
@model LOC_StateModel;


<div class="row ">
    <div class="col-lg-8 align-items-center">

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add State</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" asp-action="LOC_StateAddEdit" method="post">
                    @Html.HiddenFor(x => x.StateID)
            <div class="col-md-12">
                <label for="inputName5" class="form-label">State Name</label>
                <input asp-for="StateName"  type="text" class="form-control">
                <span asp-validation-for = "StateName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                 <label for="inputName5" class="form-label">State Code</label>
                 <input asp-for="StateCode" type="text" class="form-control">
                 <span asp-validation-for="StateCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                        <label for="inputState" class="form-label">Country</label>
                        <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.countryDropDownModel,"CountryID","CountryCode"))" id="inputState" class="form-select">
                            <option>Select State---</option>
                        </select>
                        <span asp-validation-for="CountryID" class="text-danger"></span>   
            </div>

            <div class="text-left">
                <button type="submit" class="btn btn-primary">Submit</button>
                
            </div>
        </form><!-- End Multi Columns Form -->
    </div>
</div>
</div>
</div>

